<div class="container wrapper">
  <div class="row cart-body">
    <form class="form-horizontal" method="post" action="">
      <div
        class=""
      >
        <!--REVIEW ORDER-->
        <div class="panel panel-info">
          <div class="panel-heading">
            Review Order
          </div>
          <div class="panel-body">
          <% @whishlists.each do |w|%>
            <div class="form-group">
              <div class="col-sm-3 col-xs-3">
                <img
                  class="img-responsive"
                  src="<%= w.product.product_image.first.image if w.product.product_image.any? %>" height = "50px" width = "100px"
                />
              </div>
              <div class="col-sm-6 col-xs-6">
                <div class="col-xs-12"><%= w.product.name%></div>
                <div class="col-xs-12">
                  <%# <small>Quantity:<span>1</span></small> %>
                </div>
              </div>
              <div class="col-sm-3 col-xs-3 text-right">
                <h6><span>$</span><%= w&.product&.price%></h6>
                <P><%= link_to "Remove",remove_from_whishlist_whishlist_path(w)%></P>
                <p><%= link_to "order",add_order_whishlist_path(w)%></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<p style="color: green"><%= notice %></p>

<div id="whishlists">
  <% @whishlists.each do |whishlist| %>
    <%= render whishlist %>
    <p>
      <%= link_to "Show this whishlist", whishlist %>
    </p>
  <% end %>
</div>

<%= link_to "New whishlist", new_whishlist_path %>
