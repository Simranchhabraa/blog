<div class="panel panel-info">
          <div class="panel-heading">
            Review Order
          </div>

          <div class="panel-body">
            <% @orders.each do |o|%>
            <div class="form-group">
              <div class="col-sm-3 col-xs-3">
                <img
                  class="img-responsive"
                  src="https://c1.staticflickr.com/1/466/19681864394_c332ae87df_t.jpg"
                />
              </div>
              <div class="col-sm-6 col-xs-6">
                <div class="col-xs-12"><%= o.product.name %></div>
                <div class="col-xs-12">
                  <small>Quantity:<span><%= o.quantity %></span></small>
                </div>
              </div>
              <div class="col-sm-3 col-xs-3 text-right">
                <h6><%=o.product.price%></h6>
                <%= link_to "destroy this order", "/carts/#{c.id}/remove_from_cart" %><br>
               

              </div>
            </div>
              <%end%>
            
            <div class="form-group"><hr /></div>
            <div class="form-group">
              <div class="col-xs-12">
                <strong>Subtotal</strong>
                <div class="pull-right"><span>$</span><span>200.00</span></div>
              </div>
              <div class="col-xs-12">
                <small>Shipping</small>
                <div class="pull-right"><span>-</span></div>
              </div>
            </div>
            <div class="form-group"><hr /></div>
            <div class="form-group">
              <div class="col-xs-12">
                <strong>Order Total</strong>
                <div class="pull-right"><span>$</span><span>150.00</span></div>
              </div>
            </div>
â€‹
            <div class="form-group">
                <div class="col-xs-12">
                  <div class="pull-right"><span></span><span><a class="btn-primary btn" href="">Checkout</a></span></div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>